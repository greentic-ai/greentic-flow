{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/greentic-ai/greentic-flow/refs/heads/master/schemas/ygtc.flow.schema.json",
  "title": "Greentic YGTC Flow (self-describing nodes)",
  "type": "object",
  "required": ["id", "type", "nodes"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "type": {
      "anyOf": [
        {
          "type": "string",
          "enum": ["messaging", "webhook", "timer", "websocket", "pubsub"]
        },
        { "type": "string" }
      ],
      "description": "Flow kind; well-known values include 'messaging' and 'events', but custom strings (e.g., 'component-config') are allowed."
    },
    "start": { "type": "string" },
    "parameters": { "type": "object", "additionalProperties": true },
    "entrypoints": {
      "type": "object",
      "additionalProperties": true,
      "description": "Optional entrypoints keyed by name (e.g., default, telegram, http:/path)."
    },
    "nodes": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "patternProperties": {
        "^[a-zA-Z_][\\w-]*$": {
          "type": "object",
          "description": "A node must have exactly one component key like messaging.telegram.sendMessage (namespace.adapter.operation) plus optional routing.",
          "minProperties": 1,
          "maxProperties": 6,
          "properties": {
            "questions": {
              "type": "object",
              "properties": {
                "fields": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string", "minLength": 1 },
                      "prompt": { "type": "string" },
                      "type": {
                        "type": "string",
                        "enum": ["string", "number", "boolean", "enum"]
                      },
                      "default": {},
                      "options": {
                        "type": "array",
                        "items": { "type": "string" }
                      }
                    },
                    "required": ["id", "prompt", "type"],
                    "additionalProperties": true
                  }
                }
              },
              "required": ["fields"],
              "additionalProperties": true,
              "description": "Prompt for configuration values; answers are stored under state.<id> by the runtime."
            },
            "template": {
              "type": "string",
              "description": "Template string rendered by the runtime into the final payload."
            },
            "routing": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "to": { "type": "string" },
                  "out": { "type": "boolean" },
                  "status": { "type": "string" },
                  "reply": { "type": "boolean" }
                }
              }
            },
            "output": {
              "type": "object",
              "additionalProperties": true,
              "description": "Optional output mapping configuration."
            },
            "telemetry": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "span_name": { "type": "string" },
                "attributes": {
                  "type": "object",
                  "additionalProperties": { "type": "string" }
                },
                "sampling": { "type": "string" }
              }
            },
            "pack_alias": { "type": "string" },
            "operation": { "type": "string" }
          },
          "patternProperties": {
            "^[a-zA-Z][\\w.-]*\\.[\\w.-]+$": {
            "description": "Opaque component payload â€“ validated by the component itself. Adapter-backed components should follow the <namespace>.<adapter>.<operation> shape.",
              "additionalProperties": true
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
